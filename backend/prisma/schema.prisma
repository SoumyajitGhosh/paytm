generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int    @id @default(autoincrement())
  userName     String @unique
  password  String
  firstName String
  lastName  String
  accounts  Account[]
}

model Account {
  id        Int    @id @default(autoincrement())
  userId    Int
  user      User   @relation(fields: [userId], references: [id])
  balance   Int
}